@model IEnumerable<Asp.netCoreMvcCrud.Models.Employee>

@{
    ViewData["Title"] = "KAYITLI VERILER";
}

<h2>KAYITLI VERILER</h2>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeLocation)
            </th>
            <th>
                <a asp-action="Create" class="btn btn-outline-success"><i class="far fa-plus-square">YENI KAYIT EKLE</i></a>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficeLocation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeId">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeId">Ayrıntılar</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeId">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
